---
interface Props {
  title?: string;
}

import { SITE_TITLE_DEFAULT } from "../consts";

import Avatar from "../components/Avatar.astro";
import Background from "../components/Background.astro";
import Meta from "../components/Meta.astro";
import Tag from "../components/Tag.astro";

const { title = SITE_TITLE_DEFAULT } = Astro.props;
---

<!doctype html>
<html lang="zh-Hans">
  <head>
    <title>{title}</title>

    <Meta />
  </head>
  <body class="bg-primary-500">
    <main
      class="relative mx-auto flex max-h-dvh min-h-dvh w-fit flex-col overflow-y-scroll p-8 md:pt-16 lg:pt-32 xl:pt-48"
      style="scrollbar-width: none;"
    >
      <div
        id="intro"
        class="grid flex-initial grid-flow-row items-center gap-8 text-center md:grid-flow-col md:text-left"
      >
        <Avatar />
        <div id="info" class="space-y-6">
          <h1
            id="name"
            class="text-quaternary-500 text-4xl md:text-6xl lg:text-7xl xl:text-8xl"
          >
            too_long_name
          </h1>
          <ul id="tags">
            <li class="inline-block"><Tag text="Furry" /></li>
            <li class="inline-block"><Tag text="Developer" /></li>
            <li class="inline-block"><Tag text="Gamer" /></li>
            <li class="inline-block"><Tag text="🏳️‍🌈" /></li>
            <li class="inline-block">
              <Tag text="And more ……" last topic={false} />
            </li>
          </ul>
        </div>
      </div>

      <div class="width-full my-8 border-b-2"></div>

      <slot />
    </main>

    <Background />
  </body>
</html>
