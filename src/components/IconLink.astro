---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  color?: string;
  newWindow?: boolean;
  text: string;
  href: string;
}

const { icon, color, text, newWindow = true, href } = Astro.props;

const target = newWindow ? "_blank" : "_self";
---

<a
  href={href}
  target={target}
  class="grid grid-flow-col items-center gap-x-2 rounded-full bg-[#2C3D48]/20 px-3 py-2 backdrop-blur-xl"
>
  <Icon class="size-8 text-gray-200" name={icon} class:list={color} />
  <span class="text-gray-200">{text}</span>
</a>
